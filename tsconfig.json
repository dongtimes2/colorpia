{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2020",
    "rootDir": "./",
    "outDir": "./dist",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules/**/*", "dist/**/*", "test/**/*"]
}
