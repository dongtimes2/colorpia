{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2020",
    "lib": ["ES2020"],
    "rootDir": "./lib",
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules/**/*", "dist/**/*", "**/*.test.ts"]
}
